@model QuatromCars.Models.Brend

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/CarsAdmin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit","AdminBrends",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Brend</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.Label("Old Photo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img style="width:25%" src="@Model.BrendPhoto" alt="Alternate Text" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BrendPhoto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="Image" value="" />
            @Html.ValidationMessageFor(model => model.BrendPhoto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
